# TheSalesSherpa Environment Configuration
# Copy this file to .env and fill in your values

# ═══════════════════════════════════════════════════════════════════════════
# Server Configuration
# ═══════════════════════════════════════════════════════════════════════════

NODE_ENV=development
PORT=5001
DEMO_MODE=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ═══════════════════════════════════════════════════════════════════════════
# Security
# ═══════════════════════════════════════════════════════════════════════════

# JWT Secret - CHANGE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please

# Session Secret
SESSION_SECRET=your-session-secret-key

# ═══════════════════════════════════════════════════════════════════════════
# Database Configuration
# ═══════════════════════════════════════════════════════════════════════════

# PostgreSQL
DATABASE_URL=postgresql://sherpa:sherpa_password@localhost:5432/thesalessherpa

# Redis
REDIS_URL=redis://localhost:6379

# Neo4j (for relationship mapping)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sherpa_graph_password

# ═══════════════════════════════════════════════════════════════════════════
# AI Services
# ═══════════════════════════════════════════════════════════════════════════

# OpenAI API Key (for AI recommendations and outreach generation)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI Model (default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# ═══════════════════════════════════════════════════════════════════════════
# Salesforce Integration
# ═══════════════════════════════════════════════════════════════════════════

# Salesforce Connected App credentials
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REDIRECT_URI=http://localhost:5001/api/salesforce/callback

# ═══════════════════════════════════════════════════════════════════════════
# LinkedIn Integration (Sales Navigator API)
# ═══════════════════════════════════════════════════════════════════════════

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ═══════════════════════════════════════════════════════════════════════════
# News & Intelligence APIs
# ═══════════════════════════════════════════════════════════════════════════

# News API (for company signal monitoring)
NEWS_API_KEY=your-news-api-key

# GNews API (alternative news source)
GNEWS_API_KEY=your-gnews-api-key

# ═══════════════════════════════════════════════════════════════════════════
# Email Integration (optional)
# ═══════════════════════════════════════════════════════════════════════════

# SendGrid for outreach emails
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=notifications@thesalessherpa.ai

# ═══════════════════════════════════════════════════════════════════════════
# Logging & Monitoring
# ═══════════════════════════════════════════════════════════════════════════

LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# ═══════════════════════════════════════════════════════════════════════════
# Feature Flags
# ═══════════════════════════════════════════════════════════════════════════

ENABLE_AI_RECOMMENDATIONS=true
ENABLE_SALESFORCE_SYNC=true
ENABLE_LINKEDIN_IMPORT=false
ENABLE_NEWS_MONITORING=true
